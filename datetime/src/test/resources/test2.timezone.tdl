CREATE signals hadoopText() FROM 'datasets/signals.csv';

TRANSFORM signals textToColumnar(@delimiter=',')
    VALUE (id,userid,timestamp,lat,lon);

CALL timezone(@source_ts_attr=timestamp,
    @"source_tz_default"='Europe/Samara',
    @"dest_tz_default"='GMT'
    ) INPUT signals OUTPUT signals_output;

COPY "signals_output" hadoopText() INTO 'output';
